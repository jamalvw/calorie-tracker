generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @unique @default(autoincrement())

  name           String
  email          String @unique
  hashedPassword String

  age           Int?
  sex           Sex?
  weight        Float?
  height        Float?
  activityLevel ActivityLevel?
  goal          Goal?

  sessions Session[]

  createdAt DateTime @default(now())
}

enum Sex {
  MALE
  FEMALE
}

enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  HIGH
}

enum Goal {
  GAIN_MUSCLE
  MAINTAIN_WEIGHT
  LOSE_WEIGHT
  OTHER
}

model Session {
  id        String   @id @unique @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Food {
  id          String   @id @unique @default(uuid())
  name        String
  brand       String?
  servingSize Float?
  servingUnit String?
  calories    Float?
  protein     Float?
  carbs       Float?
  fat         Float?
  fiber       Float?
  createdAt   DateTime @default(now())
}
