generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int    @id @unique @default(autoincrement())

  name           String
  email          String @unique
  hashedPassword String

  meals          Meal[]
  goals          Goal[]
  sessions       Session[]

  createdAt DateTime @default(now())

  
}

model Session {
  id        String   @id @unique @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Meal {
  id        Int    @id @unique @default(autoincrement())
  userId    Int
  user      User   @relation(fields: [userId], references: [id])

  name      String
  calories  Int

  createdAt DateTime @default(now())
}

model Goal {
  id          Int    @id @unique @default(autoincrement())
  userId      Int
  user        User   @relation(fields: [userId], references: [id])

  type        GoalType
  targetValue Float
  unit        String

  createdAt   DateTime @default(now())
}

enum GoalType {
  WEIGHT
  CALORIES
}